      const token = await getToken();
      console.log('üîë Token para table_ids obtido:', token ? 'Sim' : 'N√£o');
      
      // Usar Promise.race para timeout sem AbortController
      const fetchPromise = fetch(`${API_BASE_URL}/table-ids`, {
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        }
      });
      
      const timeoutPromise = new Promise<never>((_, reject) => {
        setTimeout(() => {
          reject(new Error('TABLE_IDS_TIMEOUT'));
        }, 8000);
      });
      
      const response = await Promise.race([fetchPromise, timeoutPromise]);
      
      console.log('üì° Table IDs Response status:', response.status);
      console.log('üì° Table IDs Response ok:', response.ok);
      
      if (!response.ok) {
        console.error('‚ùå Erro ao buscar Table IDs:', response.status);
        setMonitoredTables([]);
        return [];
      }
      
      const data = await response.json();
      console.log('‚úÖ Table IDs fetched successfully:', data);
      
      // Verificar se os dados est√£o em uma propriedade 'data' ou diretamente no array
      const tableIds = Array.isArray(data) ? data : (data.data || []);
      console.log('üéØ Table IDs extra√≠dos:', tableIds);
      
      setMonitoredTables(tableIds);
      return tableIds;
    } catch (error: any) {
      console.error('‚ùå Erro ao buscar table_ids:', error);
      
      if (error?.message === 'TABLE_IDS_TIMEOUT') {
        console.log('‚è∞ Timeout nos Table IDs, usando dados offline');
      } else if (error?.name === 'AbortError') {
        console.log('‚è∞ Timeout nos Table IDs, usando dados offline');
      }
      
      // Retornar valores padr√£o em caso de erro
      const defaultTables = ['mesa1', 'mesa2', 'mesa3'];
