# Configurações da API do SOFIA
# Copie este arquivo para .env.local e configure as variáveis

# URLs das APIs
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_PUBLIC_API_URL=http://localhost:3001/api/public
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# Chave da API Pública
NEXT_PUBLIC_API_KEY=your_api_key_here

# Configurações de desenvolvimento
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_DEBUG=true

# URLs de produção (comentadas para desenvolvimento)
# NEXT_PUBLIC_API_URL=https://api.sofia.com.br/api
# NEXT_PUBLIC_PUBLIC_API_URL=https://api.sofia.com.br/api/public
# NEXT_PUBLIC_WS_URL=wss://api.sofia.com.br/ws

# Configurações de autenticação (se necessário)
# NEXT_PUBLIC_AUTH_DOMAIN=your_auth_domain
# NEXT_PUBLIC_AUTH_CLIENT_ID=your_client_id

# Configurações de monitoramento (opcional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Configurações de cache (opcional)
# NEXT_PUBLIC_CACHE_TTL=300000
# NEXT_PUBLIC_ENABLE_CACHE=true

# Configurações de WebSocket
# NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000
# NEXT_PUBLIC_WS_MAX_RETRIES=5

# Configurações de polling (fallback)
# NEXT_PUBLIC_POLLING_INTERVAL=5000
# NEXT_PUBLIC_ENABLE_POLLING=true

# Configurações de notificações
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
# NEXT_PUBLIC_NOTIFICATION_SOUND=true