# Configurações do Projeto SOFIA
# Copie este arquivo para .env.local e configure as variáveis

# === SUPABASE AUTHENTICATION ===
# Configurações do Supabase - Projeto SOFIA
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# URLs de redirecionamento e base do app
# Em desenvolvimento usamos a porta 3002 conforme script `npm run dev`
NEXT_PUBLIC_SITE_URL=https://app.v1sofia.com

# === CLERK AUTHENTICATION (OPCIONAL) ===
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# === SENTRY MONITORING ===
SENTRY_DSN=your_sentry_dsn_here

# === CONFIGURAÇÕES SMTP ===
SMTP_HOST=mail.v1sofia.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=no-reply@v1sofia.com
SMTP_PASS=
SMTP_FROM=no-reply@v1sofia.com

# === AWS SES (Opcional - recomendado para produção) ===
# Região: use a mesma da sua conta (ex.: sa-east-1 para São Paulo)
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
# Remetente verificado no SES (email ou domínio)
SES_FROM=no-reply@yourdomain.com

# === CONFIGURAÇÕES DE NOTIFICAÇÕES ===
EMAIL_ENABLED=true
WEBHOOK_ENABLED=false
EMAIL_RATE_LIMIT_PER_HOUR=50
WEBHOOK_RATE_LIMIT_PER_HOUR=100

# === CONFIGURAÇÕES DE RETRY ===
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
# Configuração para dados simulados (temporário para testes)
USE_MOCK_DATA=false

# === APIS EXTERNAS ===
# CPF Hub API para validação de CPF
CPF_HUB_API_KEY=your_cpf_hub_api_key_here

# Backend API Configuration
BACKEND_API_URL=https://api.v1sofia.com
BACKEND_API_KEY=your_backend_api_key_here
# Test-only key (não use em produção)
TEST_BACKEND_API_KEY=your_backend_test_api_key_here

# Redis Configuration (Optional)
REDIS_URL=

# Pagar.me Configuration
PAGARME_API_KEY=your_pagarme_api_key_here
PAGARME_SECRET_KEY=your_pagarme_secret_key_here
PAGARME_WEBHOOK_SECRET=your_pagarme_webhook_secret_here
PAGARME_WEBHOOK_URL=https://pay.v1sofia.com/api/webhooks/pagarme

# Auth Development Bypass (APENAS PARA DESENVOLVIMENTO)
NEXT_PUBLIC_AUTH_DEV_BYPASS=false
AUTH_DEV_BYPASS=false

# Configuração da porta do servidor
PORT=3000

# URLs das APIs (usando Next.js API routes)
NEXT_PUBLIC_API_URL=https://api.v1sofia.com
NEXT_PUBLIC_PUBLIC_API_URL=https://api.v1sofia.com/api/public

# Base URL explícita para APIs (opcional, priorizada se definida)
# Ex.: http://localhost:3002/api em dev, https://api.sofia.com.br/api em prod
NEXT_PUBLIC_API_BASE_URL=https://api.v1sofia.com
NEXT_PUBLIC_BACKEND_URL=https://api.v1sofia.com

# Servidor WebSocket Interno (não exposto publicamente)
INTERNAL_WS_HOST=
INTERNAL_WS_PORT=

# === CONFIGURAÇÕES DO BACKEND SOFIA ===
# URL do backend SOFIA (localhost para desenvolvimento)
SOFIA_BACKEND_URL=https://api.v1sofia.com
SOFIA_BACKEND_WS_URL=wss://api.v1sofia.com/ws

# === TESTES (E2E e integração) ===
E2E_TEST_EMAIL=
E2E_TEST_PASSWORD=
E2E_TEST_NAME=Test User
TEST_REG_EMAIL=
TEST_REG_PASSWORD=

